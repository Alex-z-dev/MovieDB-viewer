@using MovieDB.Resources;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Labels.MovieViewer</title>
    <meta name="Description" content="Movie Viewer lets you find among 1000s of movies and be informed about new and old movies popularity." />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon">
    @Styles.Render("~/Content/css")
    @*<link href="@Url.Content("~/Content/main.css")" rel="stylesheet">*@
</head>
<body>
    <div id="main-container" class="main-container">
        <div class="header navbar navbar-expand-lg navbar-light bg-light sticky-top">
            <div class="container">
                <div class="navbar-header">
                    @Html.ActionLink(Labels.MovieViewer, "Index", null, new { @class = "link" })
                </div>
            </div>
        </div>
        <div class="page-container container">
            @RenderBody()
        </div>
        <div class="footer">
            <div class="container">
                <div class="text">&copy; @Labels.MovieViewer - @DateTime.Now.Year</div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @*<script src="@Url.Content("~/Scripts/bundle.js")"></script>*@
</body>
</html>
